@using WebAPI.CollaboratorRoles;
@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<Heading Text="Collaborator Roles" />
<Breadcrumbs Links=@(new []{new Breadcrumbs.Link("List collaborators roles")})
             Target=@(Targets.Workspace) />
<Toolbar>
    <Actions>
        <ActionButton Text="Register Collaborator Role"
                      Icon="bi bi-plus-lg"
                      HtmxProps=@(new HtmxProps(Endpoints.Register, Targets.Workspace)) />
    </Actions>
</Toolbar>
<Section>
    <Content>
        <FormRow>
            <Content>
                <div class="col">
                    <SearchFilter Label="Name"
                                  Property=@nameof(ListCollaboratorRoles.Query.Name)
                                  Query=@Query
                                  HtmxProps=@(new HtmxProps(Endpoints.List, "#search-results", "outerHTML", "#search-results")) />
                </div>
            </Content>
        </FormRow>
        <div id="search-results">
            <DataTable TResult=ListCollaboratorRoles.Result
                       Result=@Result
                       Context="item">
                <TableHeader>
                    <th></th>
                    <th>CollaboratorRoleId</th>
                    <th>Name</th>
                    <th>Fee Amount</th>
                    <th>Profit Percentage</th>
                </TableHeader>
                <RowTemplate>
                    <RowToolbar>
                        <Actions>
                            <ActionLink HtmxProps=@(new HtmxProps(Endpoints.Edit.Replace("{collaboratorRoleId}", @item.CollaboratorRoleId), Targets.Workspace))
                                        Icon="bi bi-eye" />
                        </Actions>
                    </RowToolbar>
                    <td>@item.CollaboratorRoleId</td>
                    <td>@item.Name</td>
                    <td>$ @item.FeeAmount</td>
                    <td>@item.ProfitPercentage %</td>
                </RowTemplate>
            </DataTable>
            <Pagination Query=@Query
                        Result=@Result
                        HtmxProps=@(new HtmxProps(Endpoints.List, "#search-results", "outerHTML", "#search-results"))
                        Parameters=@(new[] { new KeyValuePair<string, object?>(nameof(Query.Name), Query.Name) }) />
        </div>
    </Content>
</Section>
@code {
    [Parameter, EditorRequired]
    public ListResults<ListCollaboratorRoles.Result> Result { get; set; } = default!;
    [Parameter, EditorRequired]
    public ListCollaboratorRoles.Query Query { get; set; } = default!;
}
