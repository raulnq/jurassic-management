@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<ModalForm HtmxProps=@(new HtmxProps(Endpoints.GetRegister(ClientId), $"#{Targets.ProjectList}", Swap.OuterHTML))
           Title="Add project">
    <Content>
        <TextInput Property=@nameof(AddProject.Command.Name)
                   Label="Name"
                   Placeholder="Enter name"
                   MaxLenght=100
                   Required=true />
    </Content>
</ModalForm>

@code {
    [Parameter, EditorRequired]
    public Guid ClientId { get; set; } = default!;
}
