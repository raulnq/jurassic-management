@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<ModalForm HtmxProps=@(new HtmxProps(Endpoints.GetEdit(Result.ClientId, Result.ProjectId), $"#{Targets.List}", Swap.OuterHTML))
           Title=@Endpoints.EditTitle>
    <Content>
        <TextInput Property=@nameof(EditProject.Command.Name)
                   Label="Name"
                   Placeholder="Enter name"
                   MaxLenght=100
                   Required=true
                   Value=@Result.Name />
    </Content>
</ModalForm>

@code {
    [Parameter, EditorRequired]
    public GetProject.Result Result { get; set; } = default!;
}
