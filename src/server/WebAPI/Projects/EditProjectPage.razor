@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<ModalForm HtmxProps=@(new HtmxProps(Endpoints.Edit.Replace(new Dictionary<string, object?>(){{"{clientId}",Result.ClientId}, {"projectId", Result.ProjectId}}), "#search-results", "outerHTML"))
           Title="Add project">
    <Content>
        <TextInput Property=@nameof(EditProject.Command.Name)
                   Label="Name"
                   Placeholder="Enter name"
                   MaxLenght=100
                   Required=true
                   Value=@Result.Name />
    </Content>
</ModalForm>

@code {
    [Parameter, EditorRequired]
    public GetProject.Result Result { get; set; } = default!;
}
