@using WebAPI.Clients;
@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<ModalForm Endpoint=@(Endpoints.Edit.Replace(new Dictionary<string, object?>(){{"{clientId}",Result.ClientId}, {"projectId", Result.ProjectId}}))
           Swap="outerHTML"
           Target="#search-results"
           Title="Add project">
    <Content>
        <TextInput Property=@nameof(Project.Name)
                   Label="Name"
                   Placeholder="Enter name"
                   MaxLenght=100
                   Required=true
                   Value=@Result.Name />
    </Content>
</ModalForm>

@code {
    [Parameter, EditorRequired]
    public Endpoints.Endpoint Endpoints { get; set; } = default!;
    [Parameter, EditorRequired]
    public GetProject.Result Result { get; set; } = default!;
}
