@using WebAPI.Infrastructure.SqlKata
@typeparam TResult


<table class="table">
    <thead class="table-light">
        <tr>@TableHeader</tr>
    </thead>
    <tbody>
        @if (Result.Items is null || Result.Items.Count() == 0)
        {
            //TODO: Mostrar mensaje de no resultados
        }
        else
        {
            @foreach (var item in Result.Items)
            {
                <tr @key="@item">@RowTemplate(item)</tr>
            }
        }
    </tbody>
</table>
<Pagination Query=@Query
            Result=@Result
            Endpoint=@Endpoint
            Target=@Target
            Swap=@Swap
            Select=@Select
            Parameters=@Parameters />

@code {
    [Parameter, EditorRequired]
    public string Endpoint { get; set; } = default!;
    [Parameter]
    public IEnumerable<KeyValuePair<string, object?>> Parameters { get; set; } = default!;
    [Parameter, EditorRequired]
    public ListResults<TResult> Result { get; set; } = default!;
    [Parameter, EditorRequired]
    public ListQuery Query { get; set; } = default!;
    [Parameter, EditorRequired]
    public RenderFragment<TResult> RowTemplate { get; set; } = default!;
    [Parameter, EditorRequired]
    public RenderFragment? TableHeader { get; set; } = default!;
    [Parameter, EditorRequired]
    public string Target { get; set; } = default!;
    [Parameter]
    public string Swap { get; set; } = "innerHTML";
    [Parameter]
    public string Select { get; set; } = default!;
}
