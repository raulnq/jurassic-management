@using WebAPI.Collaborators;
@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<Heading Text="Collaborators" />
<Breadcrumbs Links=@(new []{new Breadcrumbs.Link("List collaborators")})
             Target=@(Infrastructure.Ui.Targets.Workspace) />
<Toolbar>
    <Actions>
        <ActionButton Text="Register Collaborator"
                      Icon=@Icons.Add
                      HtmxProps=@(new HtmxProps(Endpoints.Register, Infrastructure.Ui.Targets.Workspace)) />
    </Actions>
</Toolbar>
<Section>
    <Content>
        <FormRow>
            <Content>
                <div class="col">
                    <SearchFilter Label="Name"
                                  Property=@nameof(ListCollaborators.Query.Name)
                                  Query=@Query
                                  HtmxProps=@(new HtmxProps(Endpoints.List, $"#{Targets.CollaboratorList}", Swap.OuterHTML, $"#{Targets.CollaboratorList}")) />
                </div>
            </Content>
        </FormRow>
        <div id=@Targets.CollaboratorList>
            <DataTable TResult=ListCollaborators.Result
                       Result=@Result
                       Context="item">
                <TableHeader>
                    <th></th>
                    <th>CollaboratorId</th>
                    <th>Name</th>
                    <th>Withholding Percentage</th>
                </TableHeader>
                <RowTemplate>
                    <RowToolbar>
                        <Actions>
                            <ActionLink HtmxProps=@(new HtmxProps(Endpoints.GetEdit(@item.CollaboratorId), Infrastructure.Ui.Targets.Workspace))
                                        Icon=@Icons.Edit />
                        </Actions>
                    </RowToolbar>
                    <td>@item.CollaboratorId</td>
                    <td>@item.Name</td>
                    <td>@item.WithholdingPercentage %</td>
                </RowTemplate>
            </DataTable>
            <Pagination Query=@Query
                        Result=@Result
                        HtmxProps=@(new HtmxProps(Endpoints.List, $"#{Targets.CollaboratorList}", Swap.OuterHTML, $"#{Targets.CollaboratorList}"))
                        Parameters=@(new []{ new KeyValuePair<string, object?>(nameof(Query.Name), Query.Name)}) />
        </div>
    </Content>
</Section>
@code {
    [Parameter, EditorRequired]
    public ListResults<ListCollaborators.Result> Result { get; set; } = default!;
    [Parameter, EditorRequired]
    public ListCollaborators.Query Query { get; set; } = default!;
}
