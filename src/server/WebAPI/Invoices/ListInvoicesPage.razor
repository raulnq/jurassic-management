@using WebAPI.Clients
@using WebAPI.Invoices;
@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<Heading Text=@Endpoints.Title />
<Breadcrumbs Links=@(new []{new Breadcrumbs.Link(Endpoints.ListTitle)})
             Target=@(Infrastructure.Ui.Targets.Workspace) />
<Toolbar>
    <Actions>
        <ActionButton Text=@ProformaToInvoiceProcesses.Endpoints.RegisterTitle
                      Icon=@Icons.Add
                      HtmxProps=@(new HtmxProps(
                      ProformaToInvoiceProcesses.Endpoints.Register, Infrastructure.Ui.Targets.Workspace)) />
    </Actions>
</Toolbar>
<Section>
    <Content>
        <FormRow>
            <Content>
                <div class="col-6">
                    <SelectFilter HtmxProps=@(new HtmxProps(Endpoints.List, $"#{Targets.List}",Swap.OuterHTML,$"#{Targets.List}"){ Include=$"#{nameof(ListInvoices.Query.ClientId)}"})
                                  Label="Status"
                                  Property=@(nameof(ListInvoices.Query.Status))
                                  Query=@Query
                                  EmptyLabel="All Status"
                                  Source=@(Enum.GetValues<InvoiceStatus>().ToDictionary(i=>i.ToString(), i=>i.ToString())) />
                </div>
                <div class="col-6">
                    <SelectFilter HtmxProps=@(new HtmxProps(Endpoints.List, $"#{Targets.List}",Swap.OuterHTML,$"#{Targets.List}"){ Include=$"#{nameof(ListInvoices.Query.Status)}"})
                                  Label="Client"
                                  Property=@(nameof(ListInvoices.Query.ClientId))
                                  Query=@Query
                                  EmptyLabel="All Clients"
                                  EmptyValue="00000000-0000-0000-0000-000000000000"
                                  Source=@(Clients.ToDictionary(i=>i.ClientId.ToString(), i=>i.Name)) />
                </div>
            </Content>
        </FormRow>
        <div id=@Targets.List>
            <DataTable TResult=ListInvoices.Result
                       Result=@Result
                       Context="item">
                <TableHeader>
                    <th></th>
                    <th>InvoiceId</th>
                    <th>Client</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Number</th>
                </TableHeader>
                <RowTemplate>
                    <RowToolbar>
                        <Actions>
                            <ActionLink HtmxProps=@(new HtmxProps(Endpoints.GetView(@item.InvoiceId), Infrastructure.Ui.Targets.Workspace))
                                        Icon=@Icons.View />
                        </Actions>
                    </RowToolbar>
                    <td>@item.InvoiceId</td>
                    <td>@item.ClientName</td>
                    <td>@item.Currency @item.Total</td>
                    <td>@item.Status</td>
                    <td>@item.Number</td>
                </RowTemplate>
            </DataTable>
            <Pagination Query=@Query
                        Result=@Result
                        HtmxProps=@(new HtmxProps(Endpoints.List, $"#{Targets.List}", Swap.OuterHTML, $"#{Targets.List}"))
                        Parameters=@(new KeyValuePair<string, object?>[]{ new (nameof(ListInvoices.Query.Status), Query.Status), new (nameof(ListInvoices.Query.ClientId), Query.ClientId)}) />
        </div>
    </Content>
</Section>
@code {
    [Parameter, EditorRequired]
    public ListResults<ListInvoices.Result> Result { get; set; } = default!;
    [Parameter, EditorRequired]
    public ListInvoices.Query Query { get; set; } = default!;
    [Parameter, EditorRequired]
    public List<SearchClients.Result> Clients { get; set; } = default!;
}
