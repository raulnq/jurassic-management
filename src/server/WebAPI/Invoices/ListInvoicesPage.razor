@using WebAPI.Invoices;
@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;

<Heading Text="Invoices" />
<Breadcrumbs Links=@(new []{new Breadcrumbs.Link("List invoices")})
             Target=@(Infrastructure.Ui.Targets.Workspace) />
<Toolbar>
    <Actions>
        <ActionButton Text="Register Invoice"
                      Icon=@Icons.Add
                      HtmxProps=@(new HtmxProps(
                      WebAPI.ProformaToInvoiceProcesses.Endpoints.Register, Infrastructure.Ui.Targets.Workspace)) />
    </Actions>
</Toolbar>
<Section>
    <Content>
        <FormRow>
            <Content>
                <div class="col">
                    <SelectFilter HtmxProps=@(new HtmxProps(Endpoints.List, $"#{Targets.InvoiceList}",Swap.OuterHTML,$"#{Targets.InvoiceList}"))
                                  Label="Status"
                                  Property=@(nameof(ListInvoices.Query.Status))
                                  Query=@Query
                                  EmptyOption="All Status"
                                  Source=@(Enum.GetValues<InvoiceStatus>().ToDictionary(i=>i.ToString(), i=>i.ToString()))>
                    </SelectFilter>
                </div>
            </Content>
        </FormRow>
        <div id=@Targets.InvoiceList>
            <DataTable TResult=ListInvoices.Result
                       Result=@Result
                       Context="item">
                <TableHeader>
                    <th></th>
                    <th>InvoiceId</th>
                    <th>Client</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Number</th>
                </TableHeader>
                <RowTemplate>
                    <RowToolbar>
                        <Actions>
                            <ActionLink HtmxProps=@(new HtmxProps(Endpoints.GetView(@item.InvoiceId), Infrastructure.Ui.Targets.Workspace))
                                        Icon=@Icons.View />
                        </Actions>
                    </RowToolbar>
                    <td>@item.InvoiceId</td>
                    <td>@item.ClientName</td>
                    <td>@item.Currency @item.Total</td>
                    <td>@item.Status</td>
                    <td>@item.Number</td>
                </RowTemplate>
            </DataTable>
            <Pagination Query=@Query
                        Result=@Result
                        HtmxProps=@(new HtmxProps(Endpoints.List, $"#{Targets.InvoiceList}", Swap.OuterHTML, $"#{Targets.InvoiceList}"))
                        Parameters=@(new []{ new KeyValuePair<string, object?>(nameof(ListInvoices.Query.Status), Query.Status)}) />
        </div>
    </Content>
</Section>
@code {
    [Parameter, EditorRequired]
    public ListResults<ListInvoices.Result> Result { get; set; } = default!;
    [Parameter, EditorRequired]
    public ListInvoices.Query Query { get; set; } = default!;
}
