@using WebAPI.Infrastructure.SqlKata;
@using WebAPI.Infrastructure.Ui;
@using WebAPI.Proformas;
@using global::Infrastructure

<div id=@Targets.WeekList>
    <DataTable TResult=ListProformaWeeks.Result
               Result=@Result.Items
               PreRenderRow="false"
               Context="item">
        <TableHeader>
            <th></th>
            <th>Week</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th class="text-end">Penalty</th>
            <th class="text-end">SubTotal</th>
        </TableHeader>
        <RowTemplate>
            <tr>
                <RowToolbar>
                    <Actions>
                        <ActionLink HtmxProps=@(new HtmxProps(Endpoints.GetListWorkItems(item.ProformaId, item.Week).AddListParameters(1, Query.PageSize), $"#{Targets.Collaborator}"){ OnClick="highlight_row(this);"})
                                    Icon=@Icons.View />
                    </Actions>
                </RowToolbar>
                <td>@item.Week</td>
                <td>@item.Start</td>
                <td>@item.End</td>
                <td class="text-end"><div id="@Targets.WeekColumnPenalty-@item.Week">@item.Penalty.ToMoneyFormat()</div></td>
                <td class="text-end"><div id="@Targets.WeekColumnSubTotal-@item.Week">@item.SubTotal.ToMoneyFormat()</div></td>
            </tr>
        </RowTemplate>
    </DataTable>
    <Pagination Query=@Query
                Result=@Result
                HtmxProps=@(new HtmxProps(Endpoints.GetListWeeks(Query.ProformaId!.Value), $"#{Targets.WeekList}", Swap.OuterHTML)) />
</div>

@code {
    [Parameter, EditorRequired]
    public ListResults<ListProformaWeeks.Result> Result { get; set; } = default!;
    [Parameter, EditorRequired]
    public ListProformaWeeks.Query Query { get; set; } = default!;
}
